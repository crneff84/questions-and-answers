{{#if addNewQuestion}}
  <h2>New Question</h2>
  <form>
    <div class="form-group">
      <label for="inquiry">Question</label>
      {{input value=inquiry id='inquiry'}}
    </div>
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id='author'}}
    </div>
    <div class="form-group">
      <label for="note">Additional Notes</label>
      {{input value=note id='note'}}
    </div>
    <button {{action 'saveQuestion'}}>Save</button>
  </form>
{{else}}
  <button {{action 'questionFormShow'}}>Submit New Question</button>
{{/if}}
