<div class="row">
  <div class="indexPosts">
    <h3>Question: {{question.inquiry}}</h3>
    <h5>Author: {{question.author}}</h5>
    <h5>Notes: {{question.note}}</h5>
  </div>
  {{update-question question=question updateQuestion="updateQuestion"}}
  <button class="btn btn-danger" {{action 'destroyQuestion' question}}>Delete Question</button>
</div>
<div class="row">
  <div id="answerHeading">
    <h3>Answers</h3>
  </div>
  {{#each question.answers as |answer|}}
    {{answer-tile answer=answer destroyAnswer="destroyAnswer" updateAnswer="updateAnswer"}}
  {{/each}}
  {{new-answer saveAnswer="saveAnswer" question=question}}
</div>
